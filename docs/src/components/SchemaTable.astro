---
// docs/src/components/SchemaTable.astro
interface Property {
  name: string;
  type: string;
  required?: boolean;
  default?: string;
  description: string;
}

interface Props {
  properties: Property[];
}

const { properties } = Astro.props;
---

<div class="schema-table-container">
  <table class="schema-table">
    <thead>
      <tr>
        <th>Property</th>
        <th>Type</th>
        <th>Default</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {properties.map((prop) => (
        <tr>
          <td>
            <code>{prop.name}</code>
            {prop.required && <span class="required">*</span>}
          </td>
          <td><code class="type">{prop.type}</code></td>
          <td>{prop.default ? <code>{prop.default}</code> : <span class="none">â€”</span>}</td>
          <td>{prop.description}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>

<style>
  .schema-table-container {
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .schema-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }
  
  .schema-table th {
    text-align: left;
    padding: 0.75rem;
    background: var(--sl-color-gray-6);
    border-bottom: 2px solid var(--sl-color-gray-5);
    font-weight: 600;
  }
  
  .schema-table td {
    padding: 0.75rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
    vertical-align: top;
  }
  
  .schema-table code {
    font-size: 0.8125rem;
    padding: 0.125rem 0.375rem;
    background: var(--sl-color-gray-6);
    border-radius: 4px;
  }
  
  .schema-table .type {
    color: var(--sl-color-blue);
  }
  
  .required {
    color: var(--sl-color-red);
    margin-left: 0.25rem;
  }
  
  .none {
    color: var(--sl-color-gray-4);
  }
</style>