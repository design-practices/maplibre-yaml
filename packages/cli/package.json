{
  "name": "@maplibre-yaml/cli",
  "version": "0.1.10",
  "description": "CLI tools for maplibre-yaml",
  "type": "module",
  "bin": {
    "maplibre-yaml": "dist/cli.js",
    "mlym": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
