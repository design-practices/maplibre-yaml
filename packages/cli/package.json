    "pathe": "^1.1.2",
    "picocolors": "^1.0.0",
    "vite": "^5.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "maplibre",
    "yaml",
    "cli",
    "validation",
    "preview"
